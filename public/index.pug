doctype html
html(lang="en")
    head
        title URL Shortener Microservice
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    
    body
        .container
            h1.text-center freeCodeCamp API Basejump: URL Shortener Microservice
            h2 Example usage:
            ul
                li Generate short URL:
                    a(href= appUrl + 'shorten/' + originalUrl)= appUrl + 'shorten/' + originalUrl
                li Redirect to the original URL:
                    a(href= appUrl + shortUrl)= appUrl + shortUrl
                
            h2 Example output:
            ul
                -output = { original_url: originalUrl, short_url: appUrl + shortUrl }
                li= JSON.stringify(output, null, 2)
